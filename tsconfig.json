{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client", "vitest", "vitest/globals", "cypress", "pinia-plugin-persist"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
      //   "/src/*": ["src/*"],
      //   "~/*": ["src/*"]
    }
  },
  "include": ["src", "vite.config.ts", "cypress"]
}
